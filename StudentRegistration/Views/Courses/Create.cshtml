@model StudentRegistration.Models.Courses
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-primary">Add a new course</h1>
                </div>


                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="CourseName" for="fname"></label>
                            <input type="text" class="form-control" id="fname" asp-for="CourseName" />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Duration" for="digree"></label>
                            <select class="form-control" id="digree" asp-for="Duration">
                                <option>3 Years</option>
                                <option>4 Years</option>
                            </select>
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <div class="form-group pt-3">
                            <button type="submit" class="btn btn-primary btn-block">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center">Course Details</h5>
                            <a asp-action="Courses" class="btn btn-primary btn-block">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center">Update Courses</h5>
                            <a href="#" class="btn btn-success btn-block">Update</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

