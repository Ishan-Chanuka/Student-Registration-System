@model StudentRegistration.Models.Student
@{
    ViewData["Title"] = "Registration Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-primary card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="FirstName" for="fname"></label>
                                <input type="text" class="form-control" id="fname" asp-for="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName" for="lname"></label>
                                <input type="text" class="form-control" id="lname" asp-for="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DOB" for="dob"></label>
                                <input type="text" class="form-control" id="dob" asp-for="DOB" />
                                <span asp-validation-for="DOB" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" for="email"></label>
                                <input type="email" class="form-control" id="email" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NIC" for="nic"></label>
                                <input type="text" class="form-control" id="nic" asp-for="NIC" />
                                <span asp-validation-for="NIC" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Contact" for="tele"></label>
                                <input type="text" class="form-control" id="tele" asp-for="Contact" />
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Digree" for="digree"></label>
                                <select class="form-control" id="digree" asp-for="Digree">
                                    <option>Software Engineer</option>
                                    <option>Management Information System</option>
                                    <option>Computer Science</option>
                                    <option>Computer Network</option>
                                    <option>Cyber Security</option>
                                </select>
                                <span asp-validation-for="Digree" class="text-danger"></span>
                            </div>

                            <div class="form-group pt-3">
                                <button type="submit" class="btn btn-primary btn-block">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <img src="~/img/Students-pana.png" class="img-fluid" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Show Student</h5>
                                <a asp-action="StudentDetails" class="btn btn-primary btn-block">View</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Update Student</h5>
                                <a href="#" class="btn btn-success btn-block">Update</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

